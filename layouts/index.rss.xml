{{- $pages := where .Site.RegularPages "Type" "in" (slice "post" "posts") -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ .Site.Title }} - All Security Bulletins</title>
    <link>{{ .Permalink }}</link>
    <description>Complete feed of all Adobe security bulletins and advisories</description>
    <generator>Hugo -- gohugo.io</generator>{{ with .Site.LanguageCode }}
    <language>{{.}}</language>{{end}}{{ with .Site.Params.author.name }}
    <managingEditor>{{ . }} (Adobe Digest)</managingEditor>{{end}}{{ with .Site.Params.author.name }}
    <webMaster>{{ . }} (Adobe Digest)</webMaster>{{end}}{{ with .Site.Copyright }}
    <copyright>{{.}}</copyright>{{end}}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}
    {{ range $pages }}
    <item>
      <title>{{ .Title | default (truncate 50 .Summary) }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Params.author.name }}<author>{{ . }} (Adobe Digest)</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
      <content:encoded><![CDATA[{{ .Content }}]]></content:encoded>
      {{ range .Params.categories }}
      <category>{{ . }}</category>
      {{ end }}
      {{ range .Params.tags }}
      <category>{{ . }}</category>
      {{ end }}
    </item>
    {{ end }}
  </channel>
</rss>
