{{- $pages := where .Site.RegularPages "Type" "in" (slice "post" "posts") -}}
{{- /* Filter to only get APSB bulletins by checking title contains APSB */ -}}
{{- $bulletins := slice -}}
{{- range $pages -}}
  {{- if in .Title "APSB" -}}
    {{- $bulletins = $bulletins | append . -}}
  {{- end -}}
{{- end -}}
{{- $bulletins = sort $bulletins ".Date" "desc" -}}
{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>Adobe Security Bulletins</title>
    <link>{{ .Site.BaseURL | absURL }}</link>
    <description>Latest security bulletins for Adobe products - manually curated and verified</description>
    <copyright>Adobe Inc. - Republished for community awareness</copyright>
    <managingEditor> (Adobe Security Digest)</managingEditor>
    {{- if $bulletins }}
    <pubDate>{{ (index $bulletins 0).Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
    {{- end }}
    {{- range $bulletins }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <description>Adobe has released security updates. More details in the security bulletin.&amp;#xA;&amp;#xA;{{- if .Params.categories }}Products: {{ delimit (after 1 .Params.categories) ", " }}&amp;#xA;{{ end -}}
      {{- if .Params.tags }}Severity: {{ index .Params.tags 0 }}&amp;#xA;{{ end -}}
      &amp;#xA;View full advisory: {{ .Permalink }}</description>
      <author>Adobe Security Team</author>
      <guid>{{ .Title }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
    </item>
    {{- end }}
  </channel>
</rss>
